@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container" style="margin-top:100px">
    <div class="row">
        <div class="col">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                        <h2>Create a new account</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating">
                            <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.UserName"></label>
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-floating">
                            <input asp-for="Input.UserLocation" class="form-control" autocomplete="location" aria-required="true" />
                            <label asp-for="Input.UserLocation"></label>
                            <span asp-validation-for="Input.UserLocation" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.Password"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-floating">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.ConfirmPassword"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-floating">Select role:</div>
                        <div class="form-floating">
                            <select asp-for="Input.Role" asp-items="Model.Input.Roles" class="form-control"></select>
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                        </div>
                        <br />
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <h2>Continue with</h2>
                    <div class="my-4">
                        <hr class="my-4">

                        <button class="w-100 btn btn-lg btn-warning" style=" background-color: #dd4b39;"
                                type="submit">
                            <i class="fab fa-google me-2"></i>  Sign in with google   <i class="bi bi-google"></i>
                        </button>
                        <br></br>
                        <button class="w-100 btn btn-lg btn-info" style="btn btn-lg btn-info background-color: #3b5998;"
                                type="submit">
                            <i class="fab fa-facebook-f me-2"></i>Sign in with facebook <i class="bi bi-facebook"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
