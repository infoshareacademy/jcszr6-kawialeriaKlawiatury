@model IEnumerable<FoodTrakker.Services.DTOs.EventDto>

@{
	ViewData["Title"] = "Index";
}

<div class="container">
	<h1>The best events in the near future!</h1>

	<div class="row container-fluid">
		@foreach (var item in Model)
		{
			<div class="col-md-3 col-sm-3 border-primary mb-3">
				<div class="card mb-3 FTCard" style="max-width: 340px;">
					<img src="~/img/eventList.png" class="card-img-top FTImage" alt="@item.Name">
					<div class="card-body">
						<h5 class="card-title">@item.Name</h5>
						<p class="card-text" style="min-height: 90px">@item.Description</p>
						<p class="card-text" style="min-height: 50px">From: @item.StartDate</p>
						<p class="card-text" style="min-height: 50px">Till: @item.EndDate</p>
						<td>
							@Html.ActionLink("More info", "Details", new {id = item.Id}, new {@class="text-dark btn FTButton FTCardbutton"})
						</td>
					</div>
				</div>
			</div>
		}
	</div>
</div>



