@model EventDto

@{
	ViewData["Title"] = "DetailsEvent";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
	<div class="row">
		<h1>DetailsEvent</h1>
		<h4>Event</h4>
		<hr/>
	</div>

	<dl class="row">
		<dt class="col-sm-2">
			<label asp-for="@Model.Name"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.Name
		</dd>
		<dt class="col-sm-2">
			<label asp-for="@Model.Description"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.Description
		</dd>
		<dt class="col-sm-2">
			<label asp-for="@Model.Location"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.Location
		</dd>
		<dt class="col-sm-2">
			<label asp-for="@Model.StartDate"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.StartDate
		</dd>
		<dt class="col-sm-2">
			<label asp-for="@Model.EndDate"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.EndDate
		</dd>
	</dl>
	<h4>Food Truck present at the event!</h4>
	@await Component.InvokeAsync("EventFoodTrucks", @Model)
	<div>
		<a asp-controller="Owner" asp-action="EditEvent" asp-route-id="@Model.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a> 
		<a asp-action="Index" class="btn btn-light">Back to List</a>
	</div>
</div>

