@model FoodTruck

@{
	ViewData["Title"] = "DetailsFoodTruck";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DetailsFoodTruck</h1>

<div>
	<h4>FoodTruck</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			<label asp-for="@Model.Name"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.Name
		</dd>
		<dt class="col-sm-2">
			<label asp-for="@Model.Type"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.Type
		</dd>
		<dt class="col-sm-2">
			<label asp-for="@Model.Description"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.Description
		</dd>
		<dt class="col-sm-2">
			<label asp-for="@Model.Location.ZIPCode"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.Location.ZIPCode
		</dd>
		<dt class="col-sm-2">
			<label asp-for="@Model.Location.City"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.Location.City
		</dd>
		<dt class="col-sm-2">
			<label asp-for="@Model.Location.Street"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.Location.Street
		</dd>
		<dt class="col-sm-2">
			<label asp-for="@Model.Location.StartDate"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.Location.StartDate
		</dd>
	</dl>
	<h4>Reviews</h4>
	@await Component.InvokeAsync("FoodTruckReview", @Model.Id)
</div>
<div>
	<a asp-controller="Owner" asp-action="EditFoodTruck" asp-route-id="@Model.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

